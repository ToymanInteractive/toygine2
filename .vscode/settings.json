{
    "clang-format.fallbackStyle": "Google",
    "cSpell.language": "en,ru",
    "cSpell.words": [
        "constexpr",
        "cpack",
        "cstrpbrk",
        "devkit",
        "devkitarm",
        "DEVKITPRO",
        "doxyfile",
