{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "release-binary-dir",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}"
        },
        {
            "name": "base-release",
            "inherits": "release-binary-dir",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "PACKAGE_FILE_NAME": "$env{BUILD_FILE_NAME}",
                "PACKAGE_NAME_SUFFIX": "$env{BUILD_NAME_SUFFIX}",
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "TOYGINE_BUILD_TESTS": "OFF",
                "ENABLE_PUBLIC_RELEASE": "$env{ENABLE_PUBLIC_RELEASE}",
                "ENABLE_PCH": "OFF"
            }
        },
        {
            "name": "linux-ninja-release",
            "displayName": "Linux Ninja release",
            "description": "ToyGine 2 Linux Ninja",
            "inherits": "base-release",
            "cacheVariables": {
                "TOYGINE_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "macos-ninja-release",
            "displayName": "macOS Ninja release",
            "description": "ToyGine 2 MacOS Ninja",
            "inherits": "base-release",
            "cacheVariables": {
                "TOYGINE_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "macos-xcode",
            "displayName": "macOS XCode",
            "description": "ToyGine 2 MacOS XCode",
            "inherits": "base-release",
            "generator": "Xcode",
            "cacheVariables": {
                "TOYGINE_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "windows-msvc",
            "displayName": "Windows x64",
            "description": "ToyGine 2 Windows MSVC",
            "inherits": "base-release",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64",
                "strategy": "set"
            },
            "cacheVariables": {
                "TOYGINE_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "windows-msvc-x86",
            "displayName": "Windows x86",
            "description": "ToyGine 2 Windows MSVC x86",
            "inherits": "base-release",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "Win32",
                "strategy": "set"
            },
            "cacheVariables": {
                "TOYGINE_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "nintendo-gba-ninja",
            "displayName": "Nintendo GameBoy Advance",
            "description": "ToyGine 2 Nintendo GameBoy Advance",
            "inherits": "base-release",
            "toolchainFile": "$env{DEVKITPRO}/cmake/GBA.cmake",
            "cacheVariables": {
                "TOYGINE_TARGET_PLATFORM": "Nintendo Game Boy Advance"
            }
        },
        {
            "name": "macos-ninja-debug",
            "displayName": "macOS Ninja debug",
            "description": "ToyGine 2 MacOS Ninja (Debug)",
            "inherits": "macos-ninja-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "TOYGINE_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "linux-ninja-debug",
            "displayName": "Linux Ninja debug",
            "description": "ToyGine 2 Linux Ninja (Debug)",
            "inherits": "linux-ninja-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "TOYGINE_BUILD_TESTS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default-debug",
            "hidden": true,
            "configuration": "Debug"
        },
        {
            "name": "default-release",
            "hidden": true,
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "linux-ninja-release",
            "configurePreset": "linux-ninja-release",
            "inherits": "default-release"
        },
        {
            "name": "macos-ninja-release",
            "configurePreset": "macos-ninja-release",
            "inherits": "default-release"
        },
        {
            "name": "macos-xcode",
            "configurePreset": "macos-xcode",
            "inherits": "default-release"
        },
        {
            "name": "windows-msvc",
            "configurePreset": "windows-msvc",
            "inherits": "default-release"
        },
        {
            "name": "windows-msvc-x86",
            "configurePreset": "windows-msvc-x86",
            "inherits": "default-release"
        },
        {
            "name": "nintendo-gba-ninja",
            "configurePreset": "nintendo-gba-ninja",
            "inherits": "default-release"
        },
        {
            "name": "macos-ninja-debug",
            "configurePreset": "macos-ninja-debug",
            "inherits": "default-debug"
        },
        {
            "name": "linux-ninja-debug",
            "configurePreset": "linux-ninja-debug",
            "inherits": "default-debug"
        }
    ],
    "testPresets": [
        {
            "name": "default-debug",
            "hidden": true,
            "output": {
                "debug": true,
                "verbosity": "extra",
                "outputJUnitFile": "${sourceDir}/out/junit/${presetName}.xml"
            },
            "configuration": "Debug"
        },
        {
            "name": "default-release",
            "hidden": true,
            "output": {
                "shortProgress": true,
                "verbosity": "verbose",
                "outputJUnitFile": "${sourceDir}/out/junit/${presetName}.xml"
            },
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "linux-ninja-release",
            "configurePreset": "linux-ninja-release",
            "inherits": "default-release"
        },
        {
            "name": "macos-ninja-release",
            "configurePreset": "macos-ninja-release",
            "inherits": "default-release"
        },
        {
            "name": "macos-xcode",
            "configurePreset": "macos-xcode",
            "inherits": "default-release"
        },
        {
            "name": "windows-msvc",
            "configurePreset": "windows-msvc",
            "inherits": "default-release"
        },
        {
            "name": "windows-msvc-x86",
            "configurePreset": "windows-msvc-x86",
            "inherits": "default-release"
        },
        {
            "name": "macos-ninja-debug",
            "configurePreset": "macos-ninja-debug",
            "inherits": "default-debug",
            "execution": {
                "stopOnFailure": true
            }
        },
        {
            "name": "linux-ninja-debug",
            "configurePreset": "linux-ninja-debug",
            "inherits": "default-debug"
        }
    ]
}
